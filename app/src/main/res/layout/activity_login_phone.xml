<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPhone"
    android:orientation="vertical"
    android:weightSum="13">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="7">

        <ImageButton
            android:id="@+id/login_phone_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_back"
            android:background="#ffffff"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="LOGIN"/>

    </LinearLayout>

    <TextView
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Enter your phone"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="We will send a confirmation code to your phone"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Country"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+91"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Phone Number*"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Enter your phone number"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/enter_no_next"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="NEXT"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#0031ca"/>

    <TextView
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Enter OTP"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/edit_otp"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/resend_phone_code_sms"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="RESEND CODE BY SMS"
        android:background="#ffffff"
        android:textColor="#0526DB"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/resend_phone_code_call"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="RESEND CODE BY CALL"
        android:background="#ffffff"
        android:textColor="#0526DB"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    </View>

    <Button
        android:id="@+id/create_account_phone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="CREATE ACCOUNT / LOGIN"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#0031ca"/>

</LinearLayout>